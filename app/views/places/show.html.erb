
  <%= render 'shared/bannershow', place: @place %>
<div class='container'>

  <!-- DESCRIPTION -->
  <div class='row'>
    <div class='box'>
      <div class="box-title">Description</div>
      <p><%= @place.description %></p>
    </div>
  </div>

  <!-- REVIEW -->
  <div class='row'>
    <div class='box'>
      <div class='box-title'>
        Reviews
        <button type="button" class="btn btn-success" style='float:right;' data-toggle="modal" data-target="#ReviewModal">Add a review</button>
      </div>
      <% if @reviews.count > 0 %>
        <% @reviews.each do |review| %>
          <%= render 'shared/review', review: review %>
        <% end %>
      <% else %>
        <p> Aucun avis pour le moment </p>
      <% end %>
      <%= render 'shared/reviewpop', place: @place %>
    </div>
  </div>

  <!-- METEO -->
  <div class='row'>
    <div class='box'>
      <div class='box-title'>Forecast</div>
    </div>
  </div>
</div>
<div id="map" style="width: 100%; height: 600px;"></div>





<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>

